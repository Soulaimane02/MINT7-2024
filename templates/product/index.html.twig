{% extends 'base.html.twig' %}

{% block body %}
<style>
        body {
            background-color: #f5f5f5; /* Arrière-plan gris clair légèrement foncé */
        }

        .product-container {
            background-color: #ffffff; /* Arrière-plan blanc pour le contenu */
            border-radius: 10px; /* Coins arrondis */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Ombre légère */
            padding: 20px;
        }

        .product-image {
            width: 100%;
            height: auto;
            max-height: 300px;
            object-fit: cover;
            border-radius: 20px; /* Coins arrondis pour l'image */
            margin-bottom: 40px;
        }

        .product-details {
            text-align: center; /* Centrer le texte */
        }

        .product-price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333333;
            margin-bottom: 20px;
        }

        .product-category {
            color: #666666;
            margin-bottom: 10px;
        }

        .product-description {
            color: #555555;
            margin-bottom: 20px;
        }

        .add-to-cart-btn {
            background-color: #343a40; /* Couleur de fond du bouton */
            color: #ffffff; /* Couleur du texte du bouton */
            border: none; /* Supprimer la bordure */
            border-radius: 5px; /* Coins arrondis */
            padding: 10px 20px; /* Ajouter un peu de marge interne */
            font-size: 1rem;
            transition: background-color 0.3s ease; /* Animation au survol */
        }

        .add-to-cart-btn:hover {
            background-color: #23272b; /* Changement de couleur au survol */
        }
    </style>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 product-container">
                <div class="row">
                    <div class="col-md-6">
                        <img src="/uploads/{{ product.illustation }}" class="img-fluid product-image" alt="{{ product.name }}">
                    </div>
                    <div class="col-md-6 product-details">
                        <small><i><a href="{{ path('app_category', { slug: product.category.slug }) }}">{{ product.category.name }}</a> > {{ product.name }}</i></small>
                        <h1>{{ product.name }}</h1>
                        <span class="product-price">{{ product.price }} € H.T (Hors-Taxe)</span>
                        <p class="product-description">{{ product.description|raw }}</p>
                        <a href="{{ path('app_cart_add', { id: product.id }) }}" class="btn add-to-cart-btn">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
